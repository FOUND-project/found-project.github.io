    background-color: var(--card);
  }

  .dark-toggle {
    display: inline-block;
    margin: 1rem 0;
    padding: 0.4rem 0.8rem;
    border: none;
    background-color: var(--primary);
    color: #fff;
    border-radius: 6px;
    cursor: pointer;
  }
</style>

